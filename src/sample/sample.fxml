<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea VBox.vgrow="ALWAYS" wrapText="true" editable="false" fx:id="textArea"/>
    <HBox>
        <TextField onAction="#sendText" HBox.hgrow="SOMETIMES"  fx:id="textField" />
        <Button text="Send" onAction = "#btnSend" />
    </HBox>
</VBox>
